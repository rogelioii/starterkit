# Terraform Variables Example File
# Copy this file to terraform.tfvars and customize the values for your environment

# Basic Configuration
aws_region   = "us-east-1"
project_name = "my-project"
environment  = "dev"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"

# Availability Zones (adjust based on your region)
availability_zones = [
  "us-east-1a",
  "us-east-1b", 
  "us-east-1c"
]

# Public Subnet CIDR blocks (one for each AZ)
public_subnet_cidrs = [
  "10.0.1.0/24",   # Public subnet 1
  "10.0.2.0/24",   # Public subnet 2
  "10.0.3.0/24"    # Public subnet 3
]

# Private Subnet CIDR blocks (one for each AZ)
private_subnet_cidrs = [
  "10.0.11.0/24",  # Private subnet 1
  "10.0.12.0/24",  # Private subnet 2
  "10.0.13.0/24"   # Private subnet 3
]

# NAT Gateway Configuration
enable_nat_gateway = true
nat_gateway_type   = "single"  # Options: "single" or "multiple"

# DNS Configuration
enable_dns_hostnames = true
enable_dns_support   = true

# VPN Gateway (optional)
enable_vpn_gateway = false

# VPC Flow Logs (optional)
enable_flow_logs              = false
flow_log_destination_type     = "cloud-watch-logs"  # Options: "cloud-watch-logs" or "s3"
flow_log_log_group_name       = ""  # Leave empty for auto-generated name
flow_log_s3_bucket_name       = ""  # Leave empty for auto-generated name

# EC2 Configuration
enable_ec2_instances     = true
ec2_instance_type        = "t2.nano"
ec2_key_name            = ""  # Set to your EC2 key pair name
ec2_ami_id              = ""  # Leave empty to use latest Amazon Linux 2
ec2_root_volume_size    = 8
ec2_root_volume_type    = "gp3"
ec2_root_volume_encrypted = true

# EC2 Instance Options
enable_public_ec2       = true
enable_private_ec2      = true
ec2_associate_public_ip = true

# EC2 User Data (optional)
ec2_user_data = ""  # Leave empty for default setup

# Additional Tags
tags = {
  Owner       = "DevOps Team"
  CostCenter  = "Engineering"
  Backup      = "Daily"
  Monitoring  = "Enabled"
}

